<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="230.0" prefWidth="616.0"
      style="-fx-background-color: ffffff;"
      xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.SettingsViewController">
    <children>
        <HBox prefHeight="65.0" prefWidth="600.0"
              style="-fx-background-color: e8e0ff;">
            <children>
                <Label prefHeight="38.0" prefWidth="102.0" text="Settings">
                    <font>
                        <Font name="System Bold" size="26.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="250.0" top="15.0"/>
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
        <HBox prefHeight="41.0" prefWidth="600.0"
              style="-fx-background-color: fffbe0;">
            <children>
                <Label prefHeight="19.0" prefWidth="200.0"
                       text="INTRODUCE THE NEW NAMETAG:">
                    <font>
                        <Font size="13.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="15.0" top="10.0"/>
                    </HBox.margin>
                </Label>
                <TextField prefHeight="26.0" prefWidth="206.0" fx:id="tagField">
                    <HBox.margin>
                        <Insets left="10.0" top="8.0"/>
                    </HBox.margin>
                </TextField>
                <Button mnemonicParsing="false" prefHeight="26.0"
                        prefWidth="133.0" text="Apply" onAction="#applyButtonPressed">
                    <HBox.margin>
                        <Insets left="15.0" top="8.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <HBox prefHeight="41.0" prefWidth="600.0"
              style="-fx-background-color: fffbe0;">
            <children>
                <Label prefHeight="19.0" prefWidth="276.0"
                       text="USERS CURRENTLY CONNECTED TO THE CHAT:">
                    <font>
                        <Font size="13.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="15.0" top="10.0"/>
                    </HBox.margin>
                </Label>
                <Label prefHeight="28.0" prefWidth="126.0" text="" fx:id="numberLabel">
                    <HBox.margin>
                        <Insets left="15.0" top="6.0"/>
                    </HBox.margin>
                    <font>
                        <Font name="System Bold Italic" size="19.0"/>
                    </font>
                </Label>
                <Button mnemonicParsing="false" prefHeight="26.0"
                        prefWidth="133.0" text="Refresh" onAction="#refreshButtonPressed">
                    <HBox.margin>
                        <Insets left="14.0" top="8.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <HBox prefHeight="42.0" prefWidth="600.0">
            <children>
                <Label prefHeight="19.0" prefWidth="416.0" fx:id="errorLabel">
                    <font>
                        <Font size="13.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="15.0" top="10.0"/>
                    </HBox.margin>
                </Label>
                <Button mnemonicParsing="false" prefHeight="26.0"
                        prefWidth="133.0" text="Back" onAction="#backButtonPressed">
                    <HBox.margin>
                        <Insets left="16.0" top="8.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
